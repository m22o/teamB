<h1>New Account</h1>

<%= form_for @user do |f| %>
	<div class="field">
		<%=f.label :name %>
		<%=f.text_field :name %>
	</div>
	<div class = "field">
		<%=f.label :pass %>
		<%=f.password_field :pass %>
	</div>
	<div class = "field">
	<%=f.label :phone %>
	<%=f.telephone_field :phone %>
	</div>
	<div class="actions">
		<%= f.submit 'Create My Account' %>
	</div>
<% end %>



